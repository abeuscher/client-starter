# WordPress Client Environment Configuration Template
# Copy this file to .env and customize for your specific environment

# ===========================================
# ENVIRONMENT IDENTIFICATION
# ===========================================
ENVIRONMENT=staging

# ===========================================
# CLIENT CONFIGURATION
# ===========================================
CLIENT_NAME=widgetsrus
CONTAINER_PREFIX=widgets

# ===========================================
# WORDPRESS CONFIGURATION
# ===========================================
WP_DOMAIN=widgets.beuscher.net
WP_TITLE=Widgets
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=secure_staging_admin_password_123
WP_ADMIN_EMAIL=admin@widgetsrus.com
WP_TIMEZONE=America/New_York
REMOVE_DEFAULT_CONTENT=true

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MYSQL_DATABASE=widgetsrus_staging
MYSQL_USER=wp_user_staging
MYSQL_PASSWORD=secure_db_password_456
MYSQL_ROOT_PASSWORD=secure_root_password_789
MYSQL_HOST=widgets-mysql-staging

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
DOCUMENT_ROOT=./public_html
PHP_INI=./config/php/php.ini
VHOSTS_DIR=./config/vhosts
LOG_DIR=./logs/apache2
MYSQL_DATA_DIR=./data/mysql
MYSQL_LOG_DIR=./logs/mysql

# ===========================================
# RESOURCE LIMITS
# ===========================================
MYSQL_CPU_LIMIT=1
MYSQL_MEMORY_LIMIT=512M

# ===========================================
# LOCAL DEVELOPMENT ONLY
# ===========================================
HOST_MACHINE_UNSECURE_HOST_PORT=80
HOST_MACHINE_SECURE_HOST_PORT=443
HOST_MACHINE_MYSQL_PORT=3306

# ===========================================
# TEMPLATE VERSION TRACKING
# ===========================================
STARTER_VERSION=v1.0.0
TEMPLATE_REPO_URL=https://github.com/abeuscher/client-starter

